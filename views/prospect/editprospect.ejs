<% include ../partials/header %>


<div class="container" style=" padding-top: 50px; ">
    <div class="row">
      
        <div style="width: 30%; margin: 25px auto;">
          <h1 style="text-align: center">Edit a Prospect</h1>
           <form  action="/allprospectpage/<%= prospects._id %>?_method=PUT" method="POST">
            
                <div class="form-group">
                    <input class="form-control" type="text" name="prospect[id]" value="<%=prospects.id %>" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="prospect[name]" value="<%=prospects.name %>" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="prospect[description]" value=" <%=prospects.description %>" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="prospect[handler]" value=" <%=prospects.handler%>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">EDIT</button>
                </div>
            </form>
            <a href="/allprospectpage">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
