                    <button class="btn btn-md btn-danger">Delete</button>
            </form>
            
       
        </div>
        
         <div class="col-md-4 ">
           <h4>   Client Name : <%= task.clientname %>   </h4>
          
        </div>
        
    </div>   
    <div class="row padding">
        <div class="col-12 padding text-center">
    	        <a class="btn btn-default" href="/alltaskpage"><i class="fa fa-arrow-left"></i> Go back</a>		 
        </div>
    </div>
    
</div>

    
    
     
                
