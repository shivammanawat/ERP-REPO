  <% include ../partials/header %>

                   
<div class="container-fluid jumbotron padding bot">
    <div class="row padding">
    	<div class="col-12">
    	        <h1 class="display-4 text-center">Task ID: <%= task.id %> - Task Name : <%=task.name%> </h4>		 
        </div>
    </div>
    <div class="row padding">
        <div class="col-12 padding">
        <h1 class="welcome">Description</h1>
    	        <h6 class="welcome "><%= task.description %> </h6>		 
        </div>
    </div>

