        <div class="col-md-4 ">
           <h4>   HANDLED BY : <%= task.handler %>   </h4>
          
        </div>
        
        
    
        <div class="col-md-4">
       
            <a href="/alltaskpage/<%= task._id%>/edittask"><button type="button" class="btn btn-primary">Edit</button></a>
