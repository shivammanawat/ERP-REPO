<% include ../partials/header %>


<div class="container" style=" padding-top: 50px; ">
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
        <h1 style="text-align: center">Edit a Task</h1>
           <form  action="/alltaskpage/<%= tasks._id %>?_method=PUT" method="POST">
            
                <div class="form-group">
                    <input class="form-control" type="text" name="task[id]" value="<%=tasks.id %>" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="task[name]" value="<%=tasks.name %>" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="task[description]" value=" <%=tasks.description %>" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="task[handler]" value=" <%=tasks.handler%>" required>
                </div>
                  <div class="form-group">
                    <input class="form-control" type="text" name="task[clientname]" value=" <%=tasks.clientname%>" required>
                </div>
                <div class="form-group text-center">
                   <input class="form-control" type="text" name="task[status]" value=" <%=tasks.status%>" required>            
                </div>
             
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">EDIT</button>
                </div>
            </form>
            <a href="/alltaskpage">Go Back</a>
        </div>
    </div>
</div><% include ../partials/footer %>
